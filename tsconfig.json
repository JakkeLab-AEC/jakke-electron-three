{
    "compilerOptions": {
      "jsx": "react-jsx",
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "noImplicitAny": false,
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"],
        "mainArea/*": ["src/mainArea/*"],
        "rendererArea/*": ["src/rendererArea/*"]
      },
      "esModuleInterop": true,
      "allowJs": true,
    },
    "include": ["src/**/*.ts", "src/main.ts", "src/renderer.ts"],
    "exclude": ["node_modules"]
  }