{
  "name": "jakke-threejs-electron",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/main.js",
  "scripts": {
    "dev": "tsc && concurrently \"vite\" \"wait-on tcp:3000 && electron-forge start\"",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "tsc && vite build && electron-forge publish",
    "rebuild": "electron-forge import && npm rebuild sqlite3 --build-from-source --sqlite_libname=sqlcipher --sqlite=C:/path/to/sqlcipher --runtime=electron --target=33.0.2 --dist-url=https://electronjs.org/headers",
    "start": "electron-forge start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.0",
    "@electron-forge/plugin-fuses": "^7.6.0",
    "@electron/fuses": "^1.8.0",
    "@types/electron": "^1.6.12",
    "@types/glob": "^8.0.0",
    "@types/node": "^22.7.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "electron": "^33.0.2",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-electron": "^0.28.8",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "@journeyapps/sqlcipher": "^5.3.1",
    "@types/three": "^0.171.0",
    "electron-squirrel-startup": "^1.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.171.0",
    "uuid": "^11.0.3",
    "zustand": "^5.0.2"
  },
  "overrides": {
    "minimatch": "5.1.2",
    "glob": "8.1.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_quick_start",
            "author": "jakkelab",
            "description": "none"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        }
      ],
      "forge": {
        "rebuildConfig": {
          "onlyModules": [
            "@journeyapps/sqlcipher"
          ]
        }
      }
    }
  }
}
